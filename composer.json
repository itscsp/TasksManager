{
    "name": "chethanspoojary/tasks-manager",
    "description": "WordPress plugin to manage daily tasks with projects and subtasks",
    "type": "wordpress-plugin",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "brain/monkey": "^2.6",
        "wp-coding-standards/wpcs": "^2.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0"
    },
    "autoload": {
        "psr-4": {
            "TasksManager\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TasksManager\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit",
        "phpcs": "./vendor/bin/phpcs --standard=WordPress"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
